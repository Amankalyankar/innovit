# Example environment variables for local development / Render
# Copy to .env and fill in real values (DO NOT commit secrets)

# PostgreSQL connection URL (Neon or other managed Postgres)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Flask settings
SECRET_KEY=change-me-in-production
FLASK_DEBUG=false
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# CORS origins (comma-separated). Add your Netlify URL after deploy.
CORS_ORIGINS=http://localhost:5500,http://127.0.0.1:5500
